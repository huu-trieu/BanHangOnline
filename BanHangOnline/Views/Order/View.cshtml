@model BanHangOnline.Models.EF.Order
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">



<!-- Main content -->
<section class="content">
    <div class="container" style="margin-top:160px">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Chi tiết đơn hàng</h3>


            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Mã đơn hàng</label>
                            <p class="form-control">@Model.Code</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Họ tên người nhận</label>
                            <p class="form-control">@Model.CustomerName</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Tổng tiền</label>
                            <p class="form-control">@WebBanHangOnline.Common.Common.FormatNumber(Model.TotalAmount, 0)</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <p class="form-control">@Model.Phone</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Ngày tạo</label>
                            <p class="form-control">@Model.createdDate.ToString("dd-MM-yyyy")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email</label>
                            <p class="form-control">@Model.Email</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @*<div class="col-md-6">
                        <div class="form-group">
                            <label>Trạng thái</label>
                            <p class="form-control">@(Model.TypePayment ==1 ?"COD" : "Chuyển khoản")</p>
                        </div>
                    </div>*@
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Tình trạng đơn</label>
                            <p class="form-control">@(Model.Status ==1 ?"Chưa thanh toán" : @Model.Status == 2?"Đã thanh toán":"Đã hủy")</p>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-12">
                        <h2>Danh sách sản phẩm</h2>
                    </div>
                    <div class="col-12">
                        @Html.Action("Partial_SanPham", "Order", new { id = Model.ID })
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">

                </div>
                <!-- /.card-footer-->
            </div>
            <!-- /.card -->
        </div>
        </div>

</section>


