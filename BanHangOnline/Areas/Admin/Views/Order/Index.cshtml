@model PagedList.IPagedList<BanHangOnline.Models.EF.Order>
@using PagedList.Mvc;
@{ ViewBag.Title = "Danh sách đơn hàng"; }
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/order" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/order" class="nav-link">Danh sách đơn hàng</a>
        </li>
    </ul>
}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách đơn hàng</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    @using (Html.BeginForm("index", "Order", FormMethod.Get, new { }))
                    {
        <div class="input-group input-group-sm">
            @Html.TextBox("Searchtext", null, new { @class = "form-control", @placeholder = "Nhập email hoặc tên..." })
            @*<input type="text" class="form-control" name="searchText">*@
            <span class="input-group-append">
                <button type="submit" class="btn btn-info btn-flat">Tìm kiếm</button>
            </span>
        </div>}

                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Mã đơn hàng</th>
                        <th>Tên Khách hàng</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Tiền</th>
                        <th>Phương thức thanh toán</th>
                        <th>Tình trạng đơn</th>
                        <th>Ngày tạo</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
        <tr>
            <td>@i</td>
            <td>@item.Code</td>
            <td>@item.CustomerName</td>
            <td>@item.Phone</td>
            <td>@item.Email</td>
            <td>@WebBanHangOnline.Common.Common.FormatNumber(item.TotalAmount, 0)</td>
            <td>@(item.TypePayment==1?"COD":"Chuyển khoản")</td>
            <td>@(item.Status==1?"Chưa thanh toán": item.Status == 2 ? "Đã thanh toán" : item.Status == 3 ? "Đã hoàn thành" : "Đã hủy")</td>
            <td>@item.createdDate.ToString("dd/MM/yyyy")</td>
            <td>
                <a href="/admin/order/view/@item.ID" class="btn btn-sm btn-success">Xem</a>
                @if (item.Status == 1)
                {
                    <a href="#" class="btn btn-sm btn-danger btnCapNhat" data-id="@item.ID">Cập nhật</a>}
                @if (item.Status == 2)
                {
                    <a href="#" class="btn btn-sm btn-primary btnHoanThanh" data-id="@item.ID">Hoàn thành</a>
                }
            </td>
        </tr>
i++;
    }
}
                </tbody>
            </table>

            <div class="row">
                <div class="col-6"></div>
                <div class="col-6" style="text-align:right;">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cập nhật trạng thái</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="txtOrderId" value="0" />
                <div class="form-group">
                    <label>Trạng thái</label>
                    <select class="form-control" id="ddTrangThai">
                        <option value="2">
                            Đã thanh toán
                        </option>
                        <option value="3">
                            Đã hủy
                        </option>
                    </select>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="btnLuu">Lưu</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<div class="modal fade" id="modalHoanThanh">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Hoàn thành đơn hàng</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="txtHoanThanhOrderId" value="0" />
                <p>Bạn có chắc chắn muốn hoàn thành đơn hàng này?</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="btnLuuHoanThanh">Hoàn thành</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnCapNhat', function () {
                var id = $(this).data("id");
                $('#txtOrderId').val(id);
                $('#modal-default').modal('show');
            });

            $('body').on('click', '#btnLuu', function () {
                var id = $('#txtOrderId').val();
                var tt = $('#ddTrangThai').val();
                $.ajax({
                    url: '/admin/order/UpdateTT',
                    type: 'POST',
                    data: { id: id, trangthai: tt },
                    success: function (res) {
                        if (res.Success) {
                            location.reload();
                        }
                    }
                });
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            // Xử lý sự kiện nhấp vào nút "Hoàn thành"
            $('body').on('click', '.btnHoanThanh', function () {
                var id = $(this).data("id");
                $('#txtHoanThanhOrderId').val(id);
                $('#modalHoanThanh').modal('show');
            });

            // Xử lý sự kiện nhấp vào nút "Hoàn thành" trong modal
            $('body').on('click', '#btnLuuHoanThanh', function () {
                var id = $('#txtHoanThanhOrderId').val();
                $.ajax({
                    url: '/admin/order/UpdateTT',
                    type: 'POST',
                    data: { id: id, trangthai: 3 }, // Trạng thái 3 là "Đã hoàn thành"
                    success: function (res) {
                        if (res.Success) {
                            $('#modalHoanThanh').modal('hide');
                            alert("Đơn hàng đã được hoàn thành!");
                            location.reload();
                        }
                    }
                });
            });
        });
    </script>
}